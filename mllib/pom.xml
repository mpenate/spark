<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.stratio.spark</groupId>
    <artifactId>spark-parent_2.11</artifactId>
    <version>2.2.0.0-SNAPSHOT</version>

  </parent>

  <artifactId>spark-mllib_2.11</artifactId>
  <properties>
    <sbt.project.name>mllib</sbt.project.name>
  </properties>
  <packaging>jar</packaging>
  <name>Spark Project ML Library</name>
  <url>http://spark.apache.org/</url>

  <dependencies>
    <dependency>
      <groupId>com.stratio.spark</groupId>
      <artifactId>spark-core_2.11</artifactId>
      <version>2.2.0.0-SNAPSHOT</version>
    </dependency>
  <dependency>
      <groupId>com.stratio.spark</groupId>
      <artifactId>spark-core_2.11</artifactId>
      <version>2.2.0.0-SNAPSHOT</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.stratio.spark</groupId>
      <artifactId>spark-streaming_2.11</artifactId>
      <version>2.2.0.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.stratio.spark</groupId>
      <artifactId>spark-sql_2.11</artifactId>
      <version>2.2.0.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.stratio.spark</groupId>
      <artifactId>spark-graphx_2.11</artifactId>
      <version>2.2.0.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.stratio.spark</groupId>
      <artifactId>spark-mllib-local_2.11</artifactId>
      <version>2.2.0.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.stratio.spark</groupId>
      <artifactId>spark-mllib-local_2.11</artifactId>
      <version>2.2.0.0-SNAPSHOT</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.scalanlp</groupId>
      <artifactId>breeze_2.11</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-math3</artifactId>
    </dependency>
    <dependency>
      <groupId>org.scalacheck</groupId>
      <artifactId>scalacheck_2.11</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.stratio.spark</groupId>
      <artifactId>spark-streaming_2.11</artifactId>
      <version>2.2.0.0-SNAPSHOT</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jpmml</groupId>
      <artifactId>pmml-model</artifactId>
      <version>1.2.15</version>
      <exclusions>
        <exclusion>
          <groupId>org.jpmml</groupId>
          <artifactId>pmml-agent</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.stratio.spark</groupId>
      <artifactId>spark-tags_2.11</artifactId>
    </dependency>

    <!--
      This spark-tags test-dep is needed even though it isn't used in this module, otherwise testing-cmds that exclude
      them will yield errors.
    -->
    <dependency>
      <groupId>com.stratio.spark</groupId>
      <artifactId>spark-tags_2.11</artifactId>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>

  </dependencies>
  <profiles>
    <profile>
      <id>netlib-lgpl</id>
      <dependencies>
        <dependency>
          <groupId>com.github.fommil.netlib</groupId>
          <artifactId>all</artifactId>
          <version>${netlib.java.version}</version>
          <type>pom</type>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
  <build>
    <outputDirectory>target/scala-2.11/classes</outputDirectory>
    <testOutputDirectory>target/scala-2.11/test-classes</testOutputDirectory>
  </build>
</project>
